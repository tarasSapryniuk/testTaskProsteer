<div class="col-md-12 px-0 text-center">
    <div class="justify-content-center d-flex">
        <div class="left-side"></div>
        <div class="offer">
            <span class="display-4 d-flex offer-title">{{title}}</span>
            <p class="lead my-3 offer-desc">{{title_desc}} </p>
        </div>
        <div class="right-side"></div>
    </div>

    <p class="lead my-3 offer-discount">UP TO {{discount}}% </p>
    <div id="timer"></div>
    <p class="message mb-0 text-white font-weight-bold">
        {{#each messages}}
        <span>
            {{message}}
        </span> 
        {{/each}}
    </p>
</div>